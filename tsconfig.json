{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./app",
    "paths": {
      "@public/*": ["../public/*"],
      "@lib/*": ["../lib/*"],
      "@hooks/*": ["../hooks/*"],
      "@helpers/*": ["../helpers/*"],
      "types/*": ["../types/*"],
      "(cursor)": ["./(cursor)/."],
      "(routes)": ["./(routes)/."],
      "(ui)": ["./(ui)/."],
      "(3D)": ["./(3D)/."],
      "utils": ["../lib/utils"],
      "sanity.config": ["../sanity.config.ts"],
      "sanity.utils": ["../sanity/schemas/sanity.utils.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
